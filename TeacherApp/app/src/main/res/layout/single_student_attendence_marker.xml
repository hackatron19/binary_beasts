<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="70dp"
app:cardElevation="50dp"
app:cardCornerRadius="5dp"
android:layout_margin="10dp">
<LinearLayout

    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/cardview_bg1"
    android:layout_height="70dp">
    <at.markushi.ui.CircleButton
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/btn_sigin_bg2"
        app:cb_color="#59E455"
        android:src="@drawable/ic_action_tick"

        android:id="@+id/StudentPresent"
        app:cb_pressedRingWidth="8dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="50dp"

        android:hint="2018UGEC007"

android:textColor="#0E7DF3"
        android:textStyle="bold"
        android:textColorHint="#065DF3"
        android:id="@+id/regnosinglestudentattendencemarker"/>



    <at.markushi.ui.CircleButton
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:background="@drawable/absentbtn"
        android:src="@drawable/error"
            app:cb_color="#99CC00"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="12dp"

            android:id="@+id/StudentAbsent"
            app:cb_pressedRingWidth="8dp" />





</LinearLayout>



</androidx.cardview.widget.CardView>