<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardElevation="50dp"

    app:cardCornerRadius="5dp"
    android:layout_margin="20dp">
  <RelativeLayout

      android:layout_width="match_parent"
      android:background="@drawable/cardview_bg"
      android:layout_height="200dp">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="22dp"
          android:layout_marginTop="12dp"
          android:hint="StudentID"
          android:paddingLeft="26dp"

          android:textStyle="bold"
          android:textColorHint="#000"
          android:id="@+id/marksentrystudentid"/>
      <EditText
          android:layout_below="@+id/marksentrystudentid"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="22dp"
          android:backgroundTint="#000000"
          android:textStyle="bold"
          android:textColorHint="#535758"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp"
          android:paddingLeft="12dp"
          android:hint="Marks"
          android:layout_marginTop="30dp"
          android:inputType="number"
          android:id="@+id/marksentryValue"/>
      <Button
          android:layout_width="150dp"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="12dp"
          android:layout_gravity="center"
          android:layout_height="40dp"
          android:text="Submit"
          android:textColor="#ffffff"
          android:layout_centerHorizontal="true"
          android:layout_below="@id/marksentryValue"
          android:background="@drawable/btn_sigin_bg"
          android:id="@+id/submitmarks"/>



  </RelativeLayout>



</androidx.cardview.widget.CardView>