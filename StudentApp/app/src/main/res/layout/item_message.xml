<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">



             <RelativeLayout
                 android:layout_marginTop="15dp"
              android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:id="@+id/left_message"
              android:layout_marginStart="@dimen/activity_horizontal_margin"
              android:background="@drawable/shape_incoming_layout"
              android:orientation="vertical">


    <TextView
        android:layout_alignParentEnd="true"
        android:id="@+id/messageTextView_recieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Message" />

    <TextView
        android:layout_below="@+id/messageTextView_recieve"
        android:id="@+id/nameTextView_recieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Name" />

</RelativeLayout>

    <LinearLayout

        android:layout_marginTop="15dp"
        android:layout_below="@id/left_message"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/right_message"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_outgoing_bubble"
        android:orientation="vertical">


        <TextView
            android:layout_marginStart="15dp"
            android:id="@+id/messageTextView_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Message" />

        <TextView
            android:layout_marginStart="15dp"
            android:id="@+id/nameTextView_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="Name" />

    </LinearLayout>

</RelativeLayout>