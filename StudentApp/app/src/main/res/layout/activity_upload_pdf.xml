<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#AEFFFFFF"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:elevation="300dp"
        android:layout_height="300dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="23dp"
            android:padding="32dp"
            android:src="@drawable/pdf"/>
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/dropdownview2"
            app:ms_dropdown_max_height="500dp"
            android:background="#D83232"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            app:ms_background_color="#fff"
            app:ms_hint="Select Course"
            android:padding="12dp"
            app:ms_hint_color="#B0F50808"
            android:visibility="invisible"
            app:ms_text_color="#DF0C04"
            android:layout_marginLeft="20dp"
            app:ms_dropdown_height="wrap_content"
            android:layout_width="265dp"
            android:layout_height="45dp"/>

    </androidx.cardview.widget.CardView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    </LinearLayout>
    <ProgressBar
        android:id="@+id/uploaddilog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:indeterminate="true"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/docdesc"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:textColor="#DF0C04"

        android:layout_marginTop="100dp"
        android:textColorHint="#DF0C04"

        android:hint="Brief Description"/>


</LinearLayout>