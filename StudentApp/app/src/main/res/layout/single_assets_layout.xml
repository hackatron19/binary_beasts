<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="15dp"
    android:layout_height="290dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="40dp">

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_margin="15dp"
        android:src="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="center"
        android:id="@+id/AssetsImageSingle"/>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="15dp"
        android:text="CHAL NA HATT"
        android:textSize="20sp"
        android:layout_below="@+id/AssetsImageSingle"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AssetDescriptionSingle"/>

  <LinearLayout

      android:layout_below="@+id/AssetDescriptionSingle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <com.airbnb.lottie.LottieAnimationView

          android:layout_marginStart="0dp"
          android:layout_width="60dp"
          android:layout_height="90dp"
          android:layout_marginBottom="1dp"
          app:lottie_loop="true"
          android:layout_gravity="center"
          app:lottie_autoPlay="true"
          android:id="@+id/click_to_whatsapp"
          app:lottie_rawRes="@raw/whatsapp" />



      <com.airbnb.lottie.LottieAnimationView

          android:layout_marginStart="0dp"
          android:layout_width="60dp"
          android:layout_height="90dp"
          android:layout_marginBottom="1dp"
          app:lottie_loop="true"
          android:layout_gravity="center"
          app:lottie_autoPlay="true"
          android:id="@+id/click_to_phone"
          app:lottie_rawRes="@raw/contact_us" />



  </LinearLayout>

</RelativeLayout>
</androidx.cardview.widget.CardView>